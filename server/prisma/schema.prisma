generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                     String          @id @default(cuid())
  username               String          @unique
  passwordHash           Bytes
  passwordSalt           Bytes
  friends                User[]          @relation(name: "Friends")
  INTERNAL_friends       User[]          @relation(name: "Friends")
  sentFriendRequests     FriendRequest[] @relation(name: "SentFriendRequests")
  receivedFriendRequests FriendRequest[] @relation(name: "ReceivedFriendRequests")
  sentDirectMessages     DirectMessage[] @relation(name: "SentDirectMessages")
  receivedDirectMessages DirectMessage[] @relation(name: "ReceivedDirectMessages")
}

model FriendRequest {
  sender     User   @relation(name: "SentFriendRequests", fields: [senderId], references: [id])
  senderId   String
  receiver   User   @relation(name: "ReceivedFriendRequests", fields: [receiverId], references: [id])
  receiverId String

  @@id([senderId, receiverId])
}

model DirectMessage {
  id         String   @id @default(cuid())
  sender     User     @relation(name: "SentDirectMessages", fields: [senderId], references: [id])
  senderId   String
  receiver   User     @relation(name: "ReceivedDirectMessages", fields: [receiverId], references: [id])
  receiverId String
  timestamp  DateTime @default(now())
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(cuid())
  username     String    @unique
  passwordHash String
  sessions     Session[]
}

model Session {
  id      String   @id
  expires DateTime
  user    User     @relation(fields: [userId], references: [id])
  userId  String
}
